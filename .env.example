# ============================================
# Nerally.gr - Environment Configuration Template
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit .env to git - only .env.example should be committed
# ============================================

# Google reCAPTCHA v3 Configuration
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# SMTP Email Configuration
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_secure_password_here
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Nerally.gr

# Security Settings
CSRF_TOKEN_SECRET=your_random_secret_string_here
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_TIME_WINDOW=3600

# Application Settings
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=error
